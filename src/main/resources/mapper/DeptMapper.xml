<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.qydata.mapper.DeptMapper">


    <resultMap type="Dept" id="dept">
        <id column="id" property="id"/>
        <result column="deptName" property="deptName"/>
        <result column="deptNo" property="deptNo"/>
        <result column="createTime" property="createTime"/>
        <result column="timestamp" property="timestamp"/>
    </resultMap>

   <!--新增部门-->
    <insert id="insertDept" parameterType="Dept" useGeneratedKeys="true" keyProperty="id">
        insert into qyauth.Dept(deptName,deptNo,createTime)
        values(#{deptName},#{deptNo},sysdate())
    </insert>
    <!--查找所有的部门-->
    <select id="findAllDept" resultType="Dept">
        select id,deptNo,deptName from qyauth.Dept
    </select>
    <!--批量插入用户和部门映射-->
    <insert id="insertUserDept" parameterType="map" useGeneratedKeys="true" keyProperty="id">

        insert into qyauth.UserDept(userId,deptNo,createTime)
        values
        <foreach collection="deptNo" index="index" item="item" separator=",">
            ( #{userId},#{item},sysdate() )
        </foreach>

    </insert>

</mapper>